<!doctype html>
<html lang="hi">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Trending Keywords â€” Dareloom Hub</title>
  <meta name="description" content="Popular search keywords for Dareloom Hub â€” discover trending searches, open related pages, and boost traffic." />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href="https://dareloom.fun/trending.html" />

  <!-- Open Graph -->
  <meta property="og:title" content="Trending Keywords â€” Dareloom Hub" />
  <meta property="og:description" content="Popular search keywords for Dareloom Hub â€” discover trending searches, open related pages, and boost traffic." />
  <meta property="og:url" content="https://dareloom.fun/trending.html" />
  <meta property="og:image" content="https://dareloom.fun/web-app-manifest-512x512.png" />

  <style>
    :root{
      --bg:#000;
      --card:#0f0f0f;
      --accent:#ff377f;
      --muted:#9aa0a6;
      --text:#fff;
      --radius:12px;
      --gap:14px;
      font-family: Inter, system-ui, Arial, sans-serif;
    }
    html,body{height:100%;margin:0;background:var(--bg);color:var(--text)}
    .container{max-width:1100px;margin:18px auto;padding:18px}
    header{display:flex;align-items:center;justify-content:space-between;gap:12px}
    header h1{margin:0;font-size:1.2rem;color:var(--accent)}
    .intro{color:var(--muted);margin-top:8px}
    #ad-slot{margin:18px 0;padding:12px;border-radius:10px;background:#081016;text-align:center;color:var(--muted)}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:var(--gap);margin-top:16px}
    .card{background:var(--card);padding:12px;border-radius:12px;border:1px solid rgba(255,255,255,0.03);transition:transform .14s}
    .card:hover{transform:translateY(-6px)}
    .kw{font-weight:700;color:#fff;display:block;margin-bottom:8px}
    .meta{color:var(--muted);font-size:0.9rem;margin-bottom:10px}
    .actions{display:flex;gap:8px;flex-wrap:wrap}
    .btn{background:transparent;border:1px solid rgba(255,255,255,0.06);color:var(--text);padding:8px 10px;border-radius:8px;font-size:0.9rem;text-decoration:none}
    .btn.primary{background:var(--accent);border-color:var(--accent);font-weight:600}
    footer{margin:28px 0;color:var(--muted);font-size:0.9rem;text-align:center}
    .loader{height:60px;display:flex;align-items:center;justify-content:center;color:var(--muted)}
    @media (max-width:520px){.grid{grid-template-columns:repeat(1,1fr)}}
  </style>
</head>
<body>
  <div class="container" id="page">
    <header>
      <div>
        <h1>ðŸ”¥ Trending Keywords</h1>
        <div class="intro">Yeh keywords recent trending list se liye gaye hain â€” click karke search results dekho ya SEO pages khol lo.</div>
      </div>
      <div aria-hidden="true">
        <!-- small badge -->
        <div style="background:#07131a;padding:6px 10px;border-radius:8px;color:var(--muted)">Dareloom Hub</div>
      </div>
    </header>

    <!-- ad slot placeholder (replace with your ad script if needed) -->
    <div id="ad-slot" aria-hidden="true">
      <!-- Insert ad script here (e.g. native banner or 728x90) -->
      <small>Ad slot â€” replace with ad script (e.g. Adsterra native/banner)</small>
    </div>

    <div id="list-area">
      <div class="loader" id="loader">Loading trending keywordsâ€¦</div>
      <div class="grid" id="keywords-grid" style="display:none"></div>
    </div>

    <footer>
      <div>Tip: Use these keywords in your titles, meta descriptions, and actor / category pages to increase organic search traffic.</div>
    </footer>
  </div>

  <!-- Structured data (will be replaced after keywords load) -->
  <script id="ld-json" type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "itemListElement": []
  }
  </script>

  <script>
    // fallback keywords if fetch fails
    const FALLBACK = [
      "porn","xxx","sex","HD scenes","full video","anal","MILF","teen",
      "lesbian","hardcore","cumshot","gangbang","ebony","blowjob","oral"
    ];

    function slugify(s){
      return String(s||"").toLowerCase().trim().replace(/&/g,"and").replace(/[^a-z0-9]+/g,"-").replace(/^-+|-+$/g,"");
    }

    async function loadKeywords() {
      const grid = document.getElementById("keywords-grid");
      const loader = document.getElementById("loader");
      let keywords = FALLBACK;
      try {
        const res = await fetch('/data/trending-keywords.json', {cache: "no-cache"});
        if (res.ok) {
          const json = await res.json();
          if (Array.isArray(json) && json.length) keywords = json;
        } else {
          console.warn("trending-json fetch failed:", res.status);
        }
      } catch (e) {
        console.warn("Could not fetch trending file:", e.message);
      }

      // ensure unique & limit to 200
      keywords = Array.from(new Set(keywords)).slice(0,200);

      // build structured data
      const ld = {
        "@context":"https://schema.org",
        "@type":"ItemList",
        "itemListElement": keywords.map((k,i)=>({
          "@type":"ListItem",
          "position": i+1,
          "name": k,
          "url": `https://dareloom.fun/?s=${encodeURIComponent(k)}`
        }))
      };
      document.getElementById('ld-json').textContent = JSON.stringify(ld);

      // render cards
      grid.innerHTML = "";
      for (const kw of keywords) {
        const slug = slugify(kw);
        // Prefer linking to search, and show potential page link if exists
        const searchUrl = `/?s=${encodeURIComponent(kw)}`;
        const moviesUrl = `/movies/${slug}-watch.html`; // generated pages typically follow this pattern
        const seoUrl = `/seo/${slug}.html`;

        const card = document.createElement('article');
        card.className = "card";
        card.innerHTML = `
          <div class="kw">${kw}</div>
          <div class="meta">Search, open watch page or create SEO page for this keyword.</div>
          <div class="actions">
            <a class="btn primary" href="${searchUrl}" rel="noopener">Search "${kw}"</a>
            <a class="btn" href="${moviesUrl}" rel="noopener">Watch page</a>
            <a class="btn" href="${seoUrl}" rel="noopener">SEO page</a>
          </div>
        `;
        grid.appendChild(card);
      }

      // show grid
      loader.style.display = "none";
      grid.style.display = "grid";
    }

    // init
    document.addEventListener('DOMContentLoaded', loadKeywords);
  </script>
</body>
</html>
